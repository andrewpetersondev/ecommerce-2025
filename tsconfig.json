{
  "compilerOptions": {
    "target": "ES2017", // Specify the target ECMAScript version for compiled code
    "lib": ["dom", "dom.iterable", "esnext"], // Specify the library files to include in the compilation
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking for declaration files
    "strict": true, // Enable strict type checking options
    "noEmit": true, // Do not emit compiled output files
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "module": "esnext", // Set the module system for compilation
    "moduleResolution": "bundler", // Specify module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON files as modules
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "jsx": "preserve", // Specify how JSX should be handled in React files
    "incremental": true, // Enable incremental compilation
    "plugins": [{ "name": "next" }], // Add additional plugins for the TypeScript compiler
    "paths": { "@/*": ["./src/*"] } // Map module paths for easier imports
  },
  "include": [
    "next-env.d.ts", // Include specific TypeScript environment settings for Next.js
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all React TypeScript files
    ".next/types/**/*.ts" // Include Next.js type definitions
  ],
  "exclude": ["node_modules"] // Exclude node_modules directory
}